---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: smarketing-backend
  namespace: ${namespace}
  annotations:
    kubernetes.io/ingress.class: nginx
spec:
  ingressClassName: nginx
  rules:
    - http:
        paths:
          - path: /api/auth
            pathType: Prefix
            backend:
              service:
                name: member
                port:
                  number: 80
          - path: /api/store
            pathType: Prefix
            backend:
              service:
                name: store
                port:
                  number: 80
          - path: /api/content
            pathType: Prefix
            backend:
              service:
                name: marketing-content
                port:
                  number: 80
          - path: /api/recommend
            pathType: Prefix
            backend:
              service:
                name: ai-recommend
                port:
                  number: 80
